<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login2Activity"
    android:background="@drawable/market_bg"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <EditText
                android:id="@+id/txtUsernameLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/style_et_login"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="EMAIL"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHint="#D1D0C9"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/txtPasswordLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="PASSWORD"
                android:inputType="textPersonName"
                android:background="@drawable/style_et_login"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:textColorHint="#D1D0C9"
                android:textColor="#000000"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/style_btns_login"
                android:onClick="btnLogin"
                android:text="SIGN IN"
                android:textColor="@drawable/style_loginbtns_pressed" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_btn_signup"
                android:onClick="btnGotoRegisterForm"
                android:text="SIGN UP"
                android:textColor="@drawable/style_loginbtns_pressed" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>